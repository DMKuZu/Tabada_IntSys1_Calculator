    <StackPanel Orientation="Vertical" Spacing="8">
        <TextBox Height="60" 
                 FontSize="30" FontWeight="Bold" 
                 IsReadOnly="True"/>
        <TextBox Height="40"
                 FontSize="24" FontWeight="Bold" />
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="Auto,Auto,Auto,Auto"
              ColumnSpacing="8" RowSpacing="8">
            <Button Grid.Row="0" Grid.Column="0" Content="7" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="0" Grid.Column="1" Content="8" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="0" Grid.Column="2" Content="9" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="0" Grid.Column="3" Content="/" FontSize="20" FontWeight="Bold" Height="60"/>

            <Button Grid.Row="1" Grid.Column="0" Content="4" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="1" Grid.Column="1" Content="5" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="1" Grid.Column="2" Content="6" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="1" Grid.Column="3" Content="*" FontSize="20" FontWeight="Bold" Height="60"/>

            <Button Grid.Row="2" Grid.Column="0" Content="1" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="2" Grid.Column="1" Content="2" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="2" Grid.Column="2" Content="3" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="2" Grid.Column="3" Content="-" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="3" Grid.Column="0" Content="0" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="3" Grid.Column="1" Content="." FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="3" Grid.Column="2" Content="=" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="4" Grid.Column="0" Content="C" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="4" Grid.Column="1" Content="CE" FontSize="20" FontWeight="Bold" Height="60"/>
            <Button Grid.Row="4" Grid.Column="2" Content="DEL" FontSize="20" FontWeight="Bold" Height="60"/>
